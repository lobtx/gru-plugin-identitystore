{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "identityStore"
    },
    "host": "${host}:${port}",
    "basePath": "${context}/rest/identitystore",

    "paths": {
        "/identity/": {
            "get": {
                "description": "Gets `Identity` objects.\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                        "name": "connection_id",
                        "in": "query",
                        "description": "connection id",
                        "required": false,
                        "type": "string",
                        "format": "string"
                    }, {
                        "name": "customer_id",
                        "in": "query",
                        "description": "customer id",
                        "required": false,
                        "type": "string",
                        "format": "string"
                    }, {
                        "name": "client_code",
                        "in": "query",
                        "description": "caller application code",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    }],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "examples": {
                            "application/json": {
                                "identity": {
                                    "connection_id": "azerty",
                                    "customer_id": "123",
                                    "attributes": {
                                        "address_number": {
                                            "key": "address_number",
                                            "type": "string",
                                            "value": "10",
                                            "certified": false
                                        },
                                        "address_stair": {
                                            "key": "address_stair",
                                            "type": "string",
                                            "value": "Etage 1",
                                            "certified": false
                                        },
                                        "phone": {
                                            "key": "phone",
                                            "type": "string",
                                            "value": "0123457896",
                                            "certified": false
                                        },
                                        "revenu_2016": {
                                            "key": "revenu_2016",
                                            "type": "file",
                                            "value": "soapui-log4j.xml",
                                            "certified": false
                                        },
                                        "address_building": {
                                            "key": "address_building",
                                            "type": "string",
                                            "value": "Escalier B",
                                            "certified": false
                                        },
                                        "preferred_username": {
                                            "key": "preferred_username",
                                            "type": "string",
                                            "value": "Dupond",
                                            "certified": false
                                        },
                                        "fixed_phone": {
                                            "key": "fixed_phone",
                                            "type": "string",
                                            "value": "",
                                            "certified": false
                                        },
                                        "first_name": {
                                            "key": "first_name",
                                            "type": "string",
                                            "value": "Jean",
                                            "certified": false
                                        },
                                        "given_name": {
                                            "key": "given_name",
                                            "type": "string",
                                            "value": "Jean",
                                            "certified": false
                                        },
                                        "address_city": {
                                            "key": "address_city",
                                            "type": "string",
                                            "value": "Paris",
                                            "certified": false
                                        },
                                        "mobile_phone": {
                                            "key": "mobile_phone",
                                            "type": "string",
                                            "value": "9874563216",
                                            "certified": false
                                        },
                                        "address": {
                                            "key": "address",
                                            "type": "string",
                                            "value": "Rue de Rennes",
                                            "certified": false
                                        },
                                        "email": {
                                            "key": "email",
                                            "type": "string",
                                            "value": "jean.dupont@gmail.cop",
                                            "certified": false
                                        },
                                        "birthplace": {
                                            "key": "birthplace",
                                            "type": "string",
                                            "value": "Paris",
                                            "certified": false
                                        },
                                        "birthdate": {
                                            "key": "birthdate",
                                            "type": "string",
                                            "value": "11/11/1970",
                                            "certified": false
                                        },
                                        "address_suffix": {
                                            "key": "address_suffix",
                                            "type": "string",
                                            "value": "TER",
                                            "certified": false
                                        },
                                        "family_name": {
                                            "key": "family_name",
                                            "type": "string",
                                            "value": "Dupond",
                                            "certified": false
                                        },
                                        "gender": {
                                            "key": "gender",
                                            "type": "string",
                                            "value": "M",
                                            "certified": false
                                        },
                                        "address_postal_code": {
                                            "key": "address_postal_code",
                                            "type": "string",
                                            "value": "75018",
                                            "certified": false
                                        },
                                        "address_street": {
                                            "key": "address_street",
                                            "type": "string",
                                            "value": "Rue de Rennes",
                                            "certified": false
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/identity/create/": {
            "post": {
                "description": "Creates `Identity` objects, only if they do not already exist.\n To know if the identity alraedy exists, the application tries to retrieve an identity from the provided customer id, then from the provided connection id.",
                "Consumes": [
                    "multipart/form-data"
                ],
                "Produces": [
                    "application/json"
                ],
                "parameters": [{
                        "in": "body",
                        "name": "body",
                        "description": "identity attributes to update",
                        "required": true,
                        "schema": {
                            "type": "json",
                            "todo": "todo" 
                        }
                    }],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    },
                    "400": {
                        "description": "Bad request, input parameters are invalid",
                        "examples": {
                            "application/json": {
                                "response": {
                                    "message": "connection_id is null or empty",
                                    "status": "Bad Request"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/identity/update/": {
            "post": {
                "description": "updates `Identity` objects.\n",
                "Consumes": [
                    "multipart/form-data"
                ],
                "Produces": [
                    "application/json"
                ],
                "parameters": [{
                        "in": "body",
                        "name": "body",
                        "description": "identity attributes to update",
                        "required": true,
                        "schema": {
                            "type": "json",
                            "todo": "todo" 
                        }
                    }],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    },
                    "400": {
                        "description": "Bad request, input parameters are invalid",
                        "examples": {
                            "application/json": {
                                "response": {
                                    "message": "connection_id is null or empty",
                                    "status": "Bad Request"
                                }
                            }
                        }
                    }
                }
            }
        },        
        "/identity/apprights": {
            "get": {
                "description": "Gets application rights.\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                        "name": "client_code",
                        "in": "header",
                        "description": "application code",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    }],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "examples": {
                            "application/json": {
                                "application_rights": {
                                    "application_code": "azerty",
                                    "attribut_rights": [
                                        {
                                            "key": "address_number",
                                            "readable": true,
                                            "writable": true,
                                            "certifiers": []
                                        },
                                        {
                                            "key": "address_building",
                                            "readable": true,
                                            "writable": true,
                                            "certifiers": ["certif_1","certif_2"]
                                        },
                                        {
                                            "key": "address_stair",
                                            "readable": false,
                                            "writable": false,
                                            "certifiers": []
                                        },
                                        {
                                            "key": "phone",
                                            "readable": true,
                                            "writable": false,
                                            "certifiers": []
                                        },
                                        {
                                            "key": "revenu_2016",
                                            "readable": false,
                                            "writable": true,
                                            "certifiers": ["certif_1"]
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/certify": {
            "post": {
                "description": "certify `Identity` attributes.\n",
                "Consumes": [
                    "multipart/form-data"
                ],
                "Produces": [
                    "application/json"
                ],
                "parameters": [{
                        "in": "body",
                        "name": "body",
                        "description": "identity attributes to certify",
                        "required": true,
                        "schema": {
                            "type": "json",
                            "todo": "todo" 
                        }
                    }],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    },
                    "400": {
                        "description": "Bad request, input parameters are invalid",
                        "examples": {
                            "application/json": {
                                "response": {
                                    "message": "connection_id is null or empty",
                                    "status": "Bad Request"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/identity/file/": {
            "get": {
                "description": "Gets an attribute file for a given parameter\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                        "name": "connection_id",
                        "in": "query",
                        "description": "connection id",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    }, {
                        "name": "application_code",
                        "in": "query",
                        "description": "caller application code",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    }, {
                        "name": "attribute_key",
                        "in": "query",
                        "description": "key of the attribute  which contains file",
                        "required": true,
                        "type": "string",
                        "format": "string"
                    }],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    },
                    "400": {
                        "description": "Bad request, input parameters are invalid",
                        "examples": {
                            "application/json": {
                                "response": {
                                    "message": "connection_id is null or empty",
                                    "status": "Bad Request"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No file found for given attribute_key",
                        "examples": {
                            "application/json": {
                                "response": {
                                    "message": "attribute_key revenu_2016 attribute not found for connection_id=azerty  client_code=MyDashboard",
                                    "status": "Bad Request"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}